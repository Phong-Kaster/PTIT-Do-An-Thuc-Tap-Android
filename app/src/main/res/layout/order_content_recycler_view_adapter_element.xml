<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/orderContentParentLayout"
    android:padding="20dp"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/orderContentAvatar"
        android:src="@drawable/product_default_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:paddingStart="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderContentName"
            android:textSize="12sp"
            android:textColor="@color/colorTextBlack"
            android:text="@string/product_default_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/orderContentPrice"
            android:textColor="@color/colorRed"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="@string/product_default_price"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/orderContentButtonAdd"
                android:src="@drawable/ic_add"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/orderContentQuantity"
                android:text="@string/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/orderContentButtonMinus"
                android:src="@drawable/ic_minus"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>