<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="10dp"
    android:id="@+id/personalitySettingLayout"
    android:background="@drawable/background_setting_element"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/personalitySettingLeftIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.01"
        android:background="@drawable/background_setting_avatar"
        android:src="@drawable/ic_shipping"/>

    <TextView
        android:id="@+id/personalitySettingName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/application_name"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorButtomNavigationMenuPressed"
        android:layout_weight="0.98"/>

    <ImageButton
        android:id="@+id/personalitySettingRightIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_setting_arrow"
        android:src="@drawable/chevron_right"
        android:layout_weight="0.01"/>
</LinearLayout>

